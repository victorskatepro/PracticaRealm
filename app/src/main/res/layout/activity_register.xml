<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/register_padding_20dp"
    android:paddingRight="@dimen/register_padding_20dp"
    android:paddingTop="@dimen/register_padding_10dp"
    tools:context="com.victorsaico.practicarealm.activities.activities.RegisterActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:layout_marginBottom="@dimen/register_marginbottom_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre"
                    android:id="@+id/edtregisternombre"
                    android:textSize="@dimen/splash_textsize_20sp"
                    android:textColor="@color/primary_text"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_marginBottom="@dimen/register_marginbottom_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Correo"
                    android:inputType="textEmailAddress"
                    android:id="@+id/edtregistercorreo"
                    android:textSize="@dimen/splash_textsize_20sp"
                    android:textColor="@color/primary_text"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_marginBottom="@dimen/register_marginbottom_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Telefono"
                    android:inputType="number"
                    android:id="@+id/edtregistertelefono"
                    android:textSize="@dimen/splash_textsize_20sp"
                    android:textColor="@color/primary_text"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_marginBottom="@dimen/register_marginbottom_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Empresa"
                    android:id="@+id/edtregisterempresa"
                    android:textSize="@dimen/splash_textsize_20sp"
                    android:textColor="@color/primary_text"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_marginBottom="@dimen/register_marginbottom_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edtregisterpassword"
                    android:hint="Contraseña"
                    android:textSize="@dimen/splash_textsize_20sp"
                    android:textColor="@color/primary_text"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_marginBottom="@dimen/register_marginbottom_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirmar contraseña"
                    android:id="@+id/edtregisterpassword2"
                    android:textSize="@dimen/splash_textsize_20sp"
                    android:textColor="@color/primary_text"/>
            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:id="@+id/imgprofile2"
                android:src="@drawable/build"/>
            <Button
                android:background="@drawable/background_round"
                android:layout_gravity="center_horizontal"
                android:layout_width="200dp"
                android:text="Capturar Foto"
                android:onClick="takePicture"
                android:textColor="@color/icons"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_marginTop="15dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Registrarse"
                android:onClick="Register"
                android:textColor="@color/primary_dark"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/background_whit_border_round"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
